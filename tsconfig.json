{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "strict": false,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "vite/client",
      "chrome",
    ],
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "local"]
}
