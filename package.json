{
  "name": "vite-crx-template",
  "version": "0.0.1",
  "description": "Simple Chrome Extension Vite Starter Template",
  "scripts": {
    "dev": "cross-env CRX_ENV=development run-p dev:*",
    "dev:code": "vite build",
    "dev:content": "vite build --config vite.content.config.ts",
    "dev:copy": "node scripts/monitor.js",
    "build": "cross-env CRX_ENV=production pnpm clear && vite build && vite build --config vite.content.config.ts && node scripts/monitor.js",
    "clear": "rimraf extension",
    "prepare": "husky install"
  },
  "author": "TinssonTai",
  "devDependencies": {
    "@types/chrome": "^0.0.197",
    "@types/node": "^18.7.17",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-replace": "^0.1.1",
    "ws": "^8.13.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "D": "^1.0.0",
    "autoprefixer": "^10.4.14",
    "idb": "^7.1.0",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "eslint src --quiet --ext .js,.ts,.tsx"
  }
}
