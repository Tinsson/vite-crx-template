    "eslint-plugin-vue": "^9.5.1",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vite-plugin-eslint": "^1.8.1",
